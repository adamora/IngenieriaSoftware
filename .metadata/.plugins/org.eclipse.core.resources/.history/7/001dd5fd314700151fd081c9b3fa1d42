#include "Agenda.h"
#include <iostream>
#include <stdlib.h>

int main(void)
{
	int opcion;
	char tecla;
	do{
		system("clear");
		cout << "MENÃš PRINCIPAL";
		cout << "1. Ver Pacientes\n";
		cout << "2. Insertar Paciente\n";
		cout << "3. Buscar Paciente\n";
		cout << "0. Salir\n";
		cout << "Opcion: ";
		cin >> opcion;
		switch(opcion)
		{
			case 1:
				system("clear");

				cout << "Presione --intro-- para continuar";
				while(tecla != '\n'){
					cin >> tecla;
				}
				break;
			case 2:
			case 3:
			case 0:
			default:
				cout << "Opcion incorrecta\n";
		}

	}while(opcion!=0);

	return 0;
}

