#ifndef CONTACTO_H_
#define CONTACTO_H_

//#include <std::string>
#include <iostream>
using namespace std;

namespace Dentista {

	class Contacto {

	private:

		std::string _nombre;
		std::string _dni;
		std::string _apellidos;
		int _telefono1;
		int _telefono2;
		std::string _correo1;
		std::string _correo2;
		//direcciones
		std::string _anotaciones;
		int _contadorAcceso;
		bool _favorito;
		//redesSociales


	public:

		inline Contacto(){
			setNombre("");
			setDNI("");
			setApellidos("");
			setTel1(0);
			setTel2(0);
			setCorreo1("");
			setCorreo2("");
			//setDirecciones
			setAnotaciones("");
			setContadorAcceso(0);
			setFavorito(false);
			//setRedesSociales
		}

		inline Contacto(std::string nombre,std::string dni, std::string apellidos,int tel1, int tel2, std::string co1, std::string co2, std::string nota){
			cout << "AQUI LLEGA";
			setNombre(nombre);
			setDNI(dni);
			setApellidos(apellidos);
			setTel1(tel1);
			setTel2(tel2);
			setCorreo1(co1);
			setCorreo2(co2);
			setAnotaciones(nota);
			setContadorAcceso(0);
			setFavorito(false);
		}
		inline std::string getNombre() const {
			return _nombre;
		}

		inline void setNombre(const std::string nombre) {
			_nombre=nombre;
		}

		inline std::string getApellidos() const {
			return _apellidos;
		}

		inline void setApellidos(const std::string apellidos) {
			_apellidos=apellidos;
		}

		inline std::string getDNI() const {
			return _dni;
		}

		inline void setDNI(const std::string dni){
			_dni=dni;
		}

		inline int getTel1() const {
			return _telefono1;
		}

		inline int getTel2() const {
			return _telefono2;
		}

		inline void setTel1(const int telefono) {
			_telefono1=telefono;
		}

		inline void setTel2(const int telefono) {
			_telefono2=telefono;
		}

		inline std::string getCorreo1() const {
			return _correo1;
		}

		inline std::string getCorreo2() const {
			return _correo2;
		}

		inline void setCorreo1(const std::string correo) {
			_correo1=correo;
		}

		inline void setCorreo2(const std::string correo) {
			_correo2=correo;
		}

		inline std::string getAnotaciones() const {
			return _anotaciones;
		}

		inline void setAnotaciones(const std::string anotaciones){
			_anotaciones=anotaciones;
		}

		inline int getContadorAcceso() const {
			return _contadorAcceso;
		}

		inline void setContadorAcceso(const int contador){
			_contadorAcceso=contador;
		}

		inline bool getFavorito() const {
			return _favorito;
		}

		inline void setFavorito(const bool favorito){
			_favorito=favorito;
		}
		Contacto operator =(const Contacto &p);
	};
}

#endif /* CONTACTO_H_ */
